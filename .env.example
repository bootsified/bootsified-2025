# Example environment variables for local development
# Copy to .env.local and fill values (do NOT commit secrets)

# PostgreSQL connection (used by Prisma)
DATABASE_URL=postgresql://user:password@localhost:5432/bootsified_dev

# Session secret used by iron-session (use a long random string)
SESSION_SECRET=your_session_secret_here

# Admin password: prefer a bcrypt hash (starts with $2). For local dev you may use plain text but avoid this in production.
ADMIN_PASSWORD=your_admin_password_or_bcrypt_hash

# Optional: Vercel Blob or other storage keys
VERCEL_BLOB_TOKEN=
# Database Configuration
# Get a free database at: https://create-db.prisma.io or run `npx create-db`
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# Resend API Configuration
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY="re_123456789"

# Email Configuration
EMAIL_FROM="your-domain@yourdomain.com"  # Must be verified in Resend (or use onboarding@resend.dev for testing)
CONTACT_EMAIL_RECIPIENT="your-email@example.com"  # Where you want to receive contact form submissions
